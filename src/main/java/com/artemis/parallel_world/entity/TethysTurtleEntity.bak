public class TethysTurtleEntity extends TurtleEntity {

    public TethysTurtleEntity(EntityType<? extends TurtleEntity> entityType, World world) {
        super(entityType, world);
    }

    //Delete requirement that it spawn on sand, increase possible spawning altitude

    public static boolean canSpawn(EntityType<TurtleEntity> type, WorldAccess world, SpawnReason spawnReason, BlockPos pos, Random random) {
        return pos.getY() < world.getSeaLevel() + 24 && world.getBaseLightLevel(pos, 0) > 8;
    }
}